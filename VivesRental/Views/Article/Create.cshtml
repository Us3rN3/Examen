@using VivesRental.Models.Article
@model ArticleBulkCreateViewModel

@{
    ViewData["Title"] = "Artikelen aanmaken";
}

<h1 class="mb-4">Meerdere Artikelen Aanmaken</h1>

<form asp-action="Create" method="post" novalidate>
    <div class="mb-3">
        <label asp-for="ProductId" class="form-label"></label>
        <select asp-for="ProductId" asp-items="Model.Products" class="form-select" aria-describedby="productHelp"></select>
        <div id="productHelp" class="form-text">Selecteer het product waarvoor je artikelen wilt aanmaken.</div>
        <span asp-validation-for="ProductId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Amount" class="form-label"></label>
        <input asp-for="Amount" type="number" min="1" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">
        <i class="bi bi-save"></i> Aanmaken
    </button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Annuleren</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
